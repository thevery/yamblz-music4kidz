.container {
  position: relative;
  margin-bottom: 24px;
  border-radius: 15px;
  background-color: #7f44ff;
  background-repeat: no-repeat;
  background-position: right bottom;
  background-size: cover;
  box-shadow: 0 12px 14px 0 rgba(0, 0, 0, 0.22);
}

.image {
  font-size: 0;
  top: 0;
  right 0;
  bottom: 0;
  left: 0;
  display: block;
  position: absolute;
  border-radius: 15px;
  background-repeat: no-repeat;
  background-position: right bottom;
  background-size: contain;
}

.title {
  margin-bottom: 30px;
}

.content {
  position: relative;
  padding: 24px 24px 16px;
  z-index: 1;
}

.button {
  margin-left: auto;
}