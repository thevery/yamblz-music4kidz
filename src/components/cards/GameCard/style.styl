.container {
    position: relative;
    padding: 16px 24px;
    margin-bottom: 24px;
    border-radius: 15px;
    background-image: linear-gradient(to top, #fde869, #00b1c1);
    background-color: #7f44ff;
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    box-shadow: 0 12px 14px 0 rgba(0, 0, 0, 0.22);
}

.title {
  margin-bottom: 30px;
}

.buttonWrapper {
  position: relative;
  z-index: 1;
}

.button {
  margin-left: auto;
}

.image {
  font-size: 0;
  height: 60%;
  right 0;
  bottom: -15px;
  left: 0;
  display: block;
  position: absolute;
  border-radius: 15px;
  background-repeat: no-repeat;
  background-position: left bottom;
  background-size: contain;
  z-index: 0;
}
