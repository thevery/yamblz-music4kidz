.container {
  padding: 24px 24px 16px;
  margin-bottom: 24px;
  border-radius: 15px;
  box-shadow: 0 12px 14px 0 rgba(0, 0, 0, 0.22);
}

.title {
  margin-bottom: 24px;
}

.subtitle {
  margin-bottom: 15px;
}

.button {
  margin-left: auto;
  margin-right: auto;
  position: relative;
}

.imageContainer {
  position: relative;
  width: 185px;
  height: 185px;
  margin: 0 auto;
}

.circle {
  border-radius: 100%;
  position: absolute;
  background-image: linear-gradient(213deg, #7f44ff, #5fa9ff);
}

.circleL {
  left: -45px;
  right: -45px;
  top: -45px;
  bottom: -45px;
  opacity: 0.05;
}

.circleM {
  left: -33px;
  right: -33px;
  top: -33px;
  bottom: -33px;
  opacity: 0.1;
}

.circleS {
  left: -16px;
  right: -16px;
  top: -16px;
  bottom: -16px;
  opacity: 0.2;
}

.image {
  position: relative;
  width: 100%;
  height: 100%;
  border-radius: 100%;
  background-repeat: no-repeat;
  background-position: center center;
  background-size: cover;
}