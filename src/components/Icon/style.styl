.achievement-disabled {
  width: 160px;
  height: 108px;

  &::before {
    content: '';
    display: block;
    margin: 0 auto;
    width: 108px;
    height: 108px;
    background-color: #323535;
    background-image: url('./images/glasses.png');
    background-size: 50%;
    background-position: 50%;
    background-repeat: no-repeat;
    border-radius: 50%;
  }
}

@media only screen and (-webkit-min-device-pixel-ratio: 1.5) {
  .achievement-disabled::before {
    background-image: url('./images/glasses@2x.png');
  }
}
@media only screen and (-webkit-min-device-pixel-ratio: 2.5) {
  .achievement-disabled::before {
    background-image: url('./images/glasses@3x.png');
  }
}

