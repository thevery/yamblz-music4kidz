.container {
  position: relative;
  width: 86vw;
  height: 86vw;
  max-width: 400px;
  max-height: 400px;
  display: flex;
}

.image,
.defaultImage {
  position: relative;
  width: 72%;
  height: 72%;
  border-radius: 50%;
  object-fit: cover;
  margin: auto;
  z-index: 9;
  display: flex;
}

.defaultImage {
  background: #b880f0;
}

.icon {
  width: 50%;
  height: 50%;
  margin: auto;
}

.grad1,
.grad2,
.grad3 {
  position: absolute;
  top: 0;
  display: block;
  border-radius: 50%;
  background: linear-gradient(0deg, #5fcef9, #ffde5a);
}

.grad1 {
  z-index: 3;
  width: 80%;
  height: 80%;
  top: 10%;
  left: 10%;
  opacity: 0.6;
}

.grad2 {
  z-index: 2;
  width: 90%;
  height: 90%;
  top: 5%;
  left: 5%;
  opacity: 0.4;
}

.grad3 {
  z-index: 1;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  opacity: 0.2;
}

.like,
.skip,
.sound {
  width: 16%;
  height: 16%;
  position: absolute;
  z-index: 10;
  cursor: pointer;
}

.soundIn,
.soundOut {
  width: 100%;
  height: 100%;
}

.like,
.skip {
  top: 42%;
}

.skip {
  left: 15%;
}

.like {
  right: 15%;
}

.sound {
  bottom: 16%;
  left: 42%;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}

