.wrapper {
  position: absolute;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  width: 100vw;
  z-index: 2;
}

.headerRow {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  height: 8vh;
  padding-top: 4vh;
  padding-bottom: 3vh;
}

.titleRow {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 20vh;
  color: #ffffff;
  font-family: 'YandexSans';
  line-height: 1.8rem;
}

.songName {
  font-size: 1.5rem;
}

.artistName {
  font-size: 1rem;
  opacity: 0.5;
}

.controlsRow {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-self: center;
  align-items: center;
  height: 12vh;
  width: 65vw;
}

.flexEnd {
  justify-content: flex-end;
}

.bottomRow {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 18vh;
  width: 90vw;
}

.vote {
  position: absolute;
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin-top: 16vh;
  width: 38vh;
  z-index: 3;
}

.spacer {
  width: 18vh;
}
.buttonList,
.buttonCommon {
  background-color: transparent;
  background-repeat: no-repeat;
  background-size: contain;
  display: inline-block;
  border: none;
}

.buttonList {
  margin-top: 6px;
}

.buttonCommon24 {
  @extends .buttonCommon;
  height: 24px;
  width: 24px;
}

.buttonCommon30 {
  @extends .buttonCommon;
  height: 30px;
  width: 30px;
}

.buttonRoundCommon {
  background-repeat: no-repeat;
  background-position: center center;
  border-radius: 50%;
  height: 7vh;
  width: 7vh;
}

.buttonLike {
  background-image: url('./images/like.svg');
  background-color: #ff3333;
  @extend .buttonRoundCommon;
}

.buttonLike:focus { outline: none; }

.buttonDislike {
  background-image: url('./images/skip.svg');
  background-color: #0065d9;
  @extend .buttonRoundCommon;
}

.buttonDislike:focus { outline: none; }

.buttonArrowDown {
  background-position: center;
  background-image: url('./images/arrow_down.svg');
  @extend .buttonCommon24;
}

.buttonArrowDown:focus { outline: none; }

.playerTitle {
  box-sizing: border-box;
  width: 78vw;
  padding-left: 10px;
  padding-right: 24px;
  text-align: center;
  font-size: 1.5rem;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.buttonPrevious {
  background: url('./images/previous.svg') center center no-repeat;
  width: 33%;
  @extend .buttonCommon30;
}

.buttonPrevious:focus { outline: none; }

.playerButton {
  display: inline-block;
  background-size: contain;
  border: none;
  height: 36px;
  width: 36px;
}

.playerButtonPlay {
  width: 33%;
  background: url('./images/play.svg') center center no-repeat;
}

.playerButtonPause {
  width: 33%;
  background: url('./images/pause.svg') center center no-repeat;
}

.player-button:focus { outline: none; }

.buttonNext {
  width: 33%;
  background: url('./images/next.svg') center center no-repeat;
  @extend .buttonCommon30;
}

.buttonNext:focus { outline: none; }

.buttonPlus {
  @extend .buttonCommon24;
  padding: 0;
}

.trackAdded {
  fill: #00b341;
  stroke: #00b341;
}

.buttonPlus:focus { outline: none; }

.buttonRepeat {
  @extend .buttonCommon24;
  padding: 0;
  &:focus {
    outline: none;
  }

  &Active {
    fill: #00b341;
  }

  &Inactive {
    fill: #fff;
  }
}

.emojiStyles {
  margin-bottom: 0;
  padding-left: 12px;
}