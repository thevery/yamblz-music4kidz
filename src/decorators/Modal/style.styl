.container {
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 100%;
  z-index: 99;
  box-sizing: border-box;
  padding: 42px 16px 16px;
  box-shadow: 0px -3px 11px rgba(0,0,0,0.3);
}

.close {
  position: absolute;
  top: 0;
  right: 0;
  padding: 16px;
}

.content {
  max-height: calc(100vh - 42px - 16px);
  overflow-y: auto;
  margin: 0 -16px;
  padding: 0 16px 0 16px;
}
