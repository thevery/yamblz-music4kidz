.container {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.slider {
  position: relative;
  display: flex;
  transition: transform 0.3s;
  margin-bottom: 15px;
}

.slide {
  flex-basis: 70vw;
  flex-shrink: 0;
  flex-grow: 0;
}

.prev,
.next {
  height: 100%;
  width: 15vw;
  position: absolute;
  top: 0;
}

.prev {
  left: 0;
}

.next {
  right: 0;
}
