.lapakota {
  width: 100%;
  height: 170px;
  margin: 0 auto 60px;
  background-image: url('../images/bg.png');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 349px 170px;

  @media (-webkit-min-device-pixel-ratio: 2) {
    background: url('../images/bg@2x.png');
    background-size: contain;
  }

  @media (-webkit-min-device-pixel-ratio: 3) {
    background: url('../images/bg@3x.png');
    background-size: contain;
  }
}

.title {
  margin-bottom: 16px;
  font-size: 24px;
  line-height: 1.33;
  letter-spacing: -0.3px;
  text-align: center;
  color: #000000;
}

.text {
  max-width: 370px;
  margin-bottom: 40px;
  padding: 0 20px;
  font-size: 16px;
  letter-spacing: -0.2px;
  text-align: center;
  color: #8f8f8f;
}

.button {
  margin: 0 auto;
}