.container {
    background-color: #fee05b;
    width: 100vw;
    height: 100vh;
    position: absolute;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.containerLeft {
    align-items: left;
}

.imageContainer {
    padding-top: 5vh;
    width: 100vw;
    height: 45vh;
    box-sizing: border-box;
    background-image: url('./images/entrance-cloud.svg');
    background-size: contain;
    background-repeat: no-repeat;
    align-self: left;
}

.title {
    font-size: 56px;
    letter-spacing: -1.2px;
    font-weight: 300;
    line-height: 1.2;

    &Wrapper {
        padding-left: 24px;
    }
}

.subTitle {
    font-size: 24px;
    line-height: 1.25;
    margin-bottom: 2vh;
}

.button {
    width: 268px;
    height: 56px;
    border-radius: 30px;
    background-color: #095fdc;
    text-transform: uppercase;
    font-size: 24px;
    font-weight: 500;
    text-align: center;
    color: #ffffff;

    &:active {
        background-color: #095fdc;
    }

    &:hover {
        background-color: #095fdc;
    }

    &Small {
        font-size: 16px;
        background-color: transparent;
        color: #c5c5c5;
        margin-top: 20px;

        &:active {
            color: #c5c5c5;
        }

        &:hover {
            color: #c5c5c5;
        }
    }
    
    &Lower {
        width: 80vw;
    }

    &Wrapper {
        width: 100%;
        padding-left: 16px;
        box-sizing: border-box;
    }
}

.calibration {
    &TitleContainer {
        background: url('./images/entrance-background-2.svg');
        padding-top: 140px;
        padding-bottom: 120px;
        padding-left: 20px;
        height: 354px;
        box-sizing: border-box;

        .title {
            font-size: 32px;
        }
    }

    &ButtonWrapper {
        text-align: center;
        position: absolute;
        bottom: 15vh;
        width: 100%;
    }
}

.cardContainer {
    width: calc(100% - 32px);
    position: absolute;
    top: 90%;
    transition: all .35s ease-out;
}

.cardShown {
    top: calc(50% - 180px);
    transition: all .35s ease-out;
}

.background {
    margin: 8px 0;
    
    &--opacity100 {
        opacity: 1;
        transition: all .35s ease-in;
    }

    &--opacity20 {
        opacity: 0.2;
        transition: all .35s ease-in;
    }
}
