.container {
    background-color: #fee05b;
    width: 100%;
    min-height: 100%;
    height: auto;
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.imageContainer {
    padding-top: 44px;
    max-width: 343px;
    width: 100%;
    height: 270px;
    max-height: 50vh;
    box-sizing: border-box;
    background: url('./images/entrance-background-1.svg');
    align-self: left;
}

.title {
    font-size: 56px;
    letter-spacing: -1.2px;
    font-weight: bold;
    line-height: 1.5em;

    &Wrapper {
        padding-left: 24px;
    }
}

.subTitle {
    font-size: 24px;
    line-height: 1.25;
    margin-bottom: 24px;
}

.button {
    width: 268px;
    height: 56px;
    border-radius: 30px;
    background-color: #095fdc;
    text-transform: uppercase;
    font-size: 24px;
    font-weight: 500;
    text-align: center;
    color: #ffffff;

    &:active {
        background-color: #095fdc;
    }

    &:hover {
        background-color: #095fdc;
    }

    &Small {
        font-size: 16px;
        background-color: transparent;
        color: #9e9e9e;
        margin-top: 20px;

        &:active {
            color: #9e9e9e;
        }

        &:hover {
            color: #9e9e9e;
        }
    }

    &Wrapper {
        width: 100%;
        padding-left: 16px;
        box-sizing: border-box;
    }
}

.calibration {
    &TitleContainer {
        background: url('./images/entrance-background-2.svg');
        padding-top: 140px;
        padding-bottom: 120px;
        padding-left: 8px;
        height: 354px;
        box-sizing: border-box;

        .title {
            font-size: 32px;
        }
    }

    &ButtonWrapper {
        text-align: center;
        position: absolute;
        bottom: 10vh;
    }
}

.cardContainer {
    width: calc(100% - 32px);
    transition: all .35s ease-out;
}

.cardShown {
    top: calc(50% - 180px);
    transition: all .35s ease-out;
}

.background {
    margin: 8px 0;
    
    &--opacity100 {
        opacity: 1;
        transition: all .35s ease-in;
    }

    &--opacity20 {
        opacity: 0.2;
        transition: all .35s ease-in;
    }
}
