.container {
  display: flex;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.dog {
  width: 200px;
  height: 161px;
  margin: 0 auto 35px;
  background: url('./images/dog.png');
  background-size: contain;

  @media (-webkit-min-device-pixel-ratio: 2) {
    background: url('./images/dog@2x.png');
    background-size: contain;
  }

  @media (-webkit-min-device-pixel-ratio: 3) {
    background: url('./images/dog@3x.png');
    background-size: contain;
  }
}

.text {
  max-width: 250px;
  margin-bottom: 50px;
  font-size: 24px;
  line-height: 1.33;
  letter-spacing: -0.3px;
  text-align: center;
  color: #000000;
}
