.filter {
  background-color: #6c50e6;
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  text-align: center;
  color: #ffffff;

  &Item {
    display: inline-block;
    width: 50%;
    border-bottom: 4px solid #6c50e6;
    box-sizing: border-box;
    padding: 19px 0 15px;
  }

  &Sticky {
    position: fixed;
    top: 56px;
    left: 0;
    z-index: 2;
    width: 100%;
  }
}

.active {
  border-bottom: 4px solid #ffffff;
}

.cardList {
  padding: 16px;
}

.trackInfo {
  padding: 16px;

  &Item {
    hgroup {
      h4[class^='subTitle'] {
        color: rgba(255, 255, 255, 0.5);
      }
    }
  }

  &Item:not(:last-child) {
    color: #ffffff;
    margin-bottom: 16px;
  }
}

.emptyContainer {
  opacity: 0.8;
  line-height: 1.44;
  text-align: center;
  color: #ffffff;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40px;
}

.emptyText {
  max-width: 248px;
}

.icon {
  display: inline-block;
  background-size: contain;

  &-heart {
    vertical-align: middle;
  }
}

.searchButton {
  width: 189px;
  height: 48px;
  border-radius: 30px;
  background-color: rgba(255, 220, 96, 0.11);
  border: solid 2px #ffffff;
  font-size: 16px;
  font-weight: 500;
  text-transform: uppercase;
  color: #ffffff;
  margin-top: 24px;
}
