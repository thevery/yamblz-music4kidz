.header {
  display: flex;
  flex-direction: column;
  align-items: center;

  padding: 13px 0;
}

.avatar {
  background-size: cover;
  box-shadow: none;
  width: 68px;
  height: 68px;
}

.userName {
  margin: 8px 0 2px;
  font-size: 20px;
  font-weight: 500;
  letter-spacing: -0.3px;
  color: #ffffff;
  line-height: 24px;
}

.totalScore {
  opacity: .8;
  font-size: 14px;
  font-weight: 500;
  color: #ffffff;
  line-height: 17px;
}

.button {
  position: absolute;
  background-repeat: no-repeat;
  background-position: 50%;
  background-color: transparent;

  &Back {
    left: 16px;
    top: 23px;
    width: 16px;
    height: 16px;
    background-image: url('./images/back.svg');
  }

  &Settings {
    right: 16px;
    top: 19px;
    width: 24px;
    height: 24px;
    background-image: url('./images/settings.svg');
  }
}