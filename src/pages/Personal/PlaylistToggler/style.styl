.container {
  padding: 16px;
}

.filter {
  background-color: #6c50e6;
  font-size: 14px;
  font-weight: 500;
  text-transform: uppercase;
  text-align: center;
  color: #ffffff;

  &Item {
    display: inline-block;
    width: 50%;
    border-bottom: 4px solid #6c50e6;
    box-sizing: border-box;
    padding: 19px 0 15px;

    &Active {
      border-bottom: 4px solid #ffffff;
    }
  }
}

.sticky {
  padding-top: 56px;
  
  .filter {
    position: fixed;
    z-index: 2;
    width: 100%;
    height: 56px;
    top: 60px;
    left: 0;
  }
}