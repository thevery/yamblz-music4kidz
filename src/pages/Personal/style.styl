.container {
  background-color: #7859ff;
  min-height: 100vh;
  padding-top: 146px;
  transition: padding-top 0.5s ease-out;
}

.slider {
  display: flex;
  margin: 33px 0;
  align-items: baseline;
  transition: all 0.5s ease-out;

  div[class^='slide'] {
    flex-basis: 160px;
  }
}

.sticky {
  padding-top: 60px;
  transition: padding-top 0.5s ease-out;

  .slider {
    width: 0;
    height: 0;
    transition: all 0.5s ease-out;

    div[class^='slide'] {
      display: none;
    }
  }
}