.container {
    background-color: #fee05b;
    position:fixed;
    top: 0;
    bottom: 0;
    width: 100%;
    overflow: hidden;
}

.titleContainer {
    background-image: url('./images/entrance-background-2.svg');
    padding-top: 140px;
    padding-left: 20px;
    height: 45vh;
    max-height: 354px;
    box-sizing: border-box;

    .title {
        font-size: 32px;
    }
}

@media screen and ( max-height: 567px ){
    .titleContainer {
        .title {
            font-size: 22px;
            font-size: calc(20px + 1.2vh);
            line-height: 33px;
        }
    }
}

@media screen and ( max-height: 480px ){
    .titleContainer {
        padding-top: 25vh;
    }
}

.button {
    width: 328px;
    max-width: 80vw;
    height: 56px;
    border-radius: 30px;
    background-color: #095fdc;
    text-transform: uppercase;
    font-size: 24px;
    font-weight: 500;
    text-align: center;
    color: #ffffff;

    &:active {
        background-color: #095fdc;
    }

    &:hover {
        background-color: #095fdc;
    }

    &Wrapper {
        text-align: center;
        position: absolute;
        bottom: 12vh;
        width: 100%;
    }
}

.buttonSmall {
    font-size: 16px;
    background-color: transparent;
    color: #9e9e9e;;
    margin-top: 20px;

    &:active {
        color: #c5c5c5;
    }

    &:hover {
        color: #c5c5c5;
    }
}