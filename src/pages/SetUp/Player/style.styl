.singer {
  margin: -25px auto 0;
}

.player {
  position: relative;
  display: inline-block;
  position: relative;
  margin-bottom: 25px;
}

.title {
  padding: 0 36px;
  font: 24px/26px 'YandexSans', Arial;
  line-height: 26px;
  margin-top: 0;
  color: #000;
}

.wrapperPlayer {
  text-align: center;
  margin-top: -40px;
}

.wrapperButtons {
  position: absolute;
  top: 0;
  width: 86vw;
  height: 86vw;
  max-width: 400px;
  max-height: 400px;
  display: flex;
}

.like,
.skip,
.sound {
  width: 16%;
  height: 16%;
  position: absolute;
  z-index: 10;
  cursor: pointer;
}

.soundIn,
.soundOut {
  width: 100%;
  height: 100%;
}

.like,
.skip {
  top: 42%;
}

.skip {
  left: 15%;
}

.like {
  right: 15%;
}

.sound {
  bottom: 16%;
  left: 42%;
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}
